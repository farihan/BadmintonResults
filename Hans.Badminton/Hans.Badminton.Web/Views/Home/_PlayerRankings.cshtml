@model Hans.Badminton.Core.ResultGenerator

<table class="table table-striped">
    <thead>
        <tr>
            <th style="background-color: yellow">Rank</th>
            <th style="background-color: yellow">Player</th>
            <th style="background-color: yellow">Game</th>
            <th style="background-color: yellow">Win</th>
            <th style="background-color: yellow">WD</th>
            <th style="background-color: yellow">LD</th>
            <th style="background-color: yellow">Different</th>
            <th style="background-color: yellow">Percentage</th>
        </tr>
    </thead>
    <tbody>
        @{
            var counter = 1;
            foreach (var item in Model.PlayerRankings)
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.Player</td>
                    <td>@item.Game</td>
                    <td style="color: red;"><strong>@item.Win</strong></td>
                    <td>@item.WinPoint</td>
                    <td>@item.LosePoint</td>
                    <td>@item.Different</td>
                    <td style="color:blue"><strong>@item.Percentage</strong></td>
                </tr>
                counter++;
            }
        }
    </tbody>
</table>
<p><strong>** WIN > WD > DIFFERENT > WIN PERCENTAGE</strong></p>


